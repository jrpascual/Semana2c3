<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/left"
    android:paddingTop="@dimen/top"
    android:orientation="vertical"
    tools:context="com.jrpascual.semana2c3.DatosActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/TituloConfirmar"
        android:textAlignment="center"
        android:textSize="@dimen/Titulo"
        />

    <TextView
        android:text="Test Nombre"
        android:layout_height="wrap_content"
        android:id="@+id/tvNombreConf"
        android:layout_marginTop="@dimen/top"
        android:textStyle="bold"
        android:layout_width="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Fecha Nacimiento:"
            android:layout_height="wrap_content"
            android:id="@+id/tvLabelFechanac"
            android:layout_marginTop="@dimen/top"
            android:layout_width="wrap_content" />
        <TextView
            android:text="Test Fechanac"
            android:layout_height="wrap_content"
            android:id="@+id/tvFechaNacConf"
            android:layout_marginTop="@dimen/top"
            android:layout_marginLeft="@dimen/left"
            android:layout_width="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Tel:"
            android:layout_height="wrap_content"
            android:id="@+id/tvLabelTelefono"
            android:layout_marginTop="@dimen/top"
            android:layout_width="wrap_content" />
        <TextView
            android:text="Test Telefono"
            android:layout_height="wrap_content"
            android:id="@+id/tvTelefConf"
            android:layout_marginTop="@dimen/top"
            android:layout_marginLeft="@dimen/left"
            android:layout_width="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Email:"
            android:layout_height="wrap_content"
            android:id="@+id/tvLabelEmail"
            android:layout_marginTop="@dimen/top"
            android:layout_width="wrap_content" />
        <TextView
            android:text="Test Email"
            android:layout_height="wrap_content"
            android:id="@+id/tvEmailConf"
            android:layout_marginTop="@dimen/top"
            android:layout_marginLeft="@dimen/left"
            android:layout_width="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="DescripciÃ³n:"
            android:layout_height="wrap_content"
            android:id="@+id/tvlabelDescr"
            android:layout_marginTop="@dimen/top"
            android:layout_width="wrap_content" />
    <TextView
        android:text="Test Descripcion"
        android:layout_height="wrap_content"
        android:id="@+id/tvDescConf"
        android:layout_marginTop="@dimen/top"
        android:layout_width="wrap_content" />
    </LinearLayout>

    <Button
        android:text="@string/BotonEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top"
        android:id="@+id/buttonEditar" />
</LinearLayout>
